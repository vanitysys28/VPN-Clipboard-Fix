{
    "manifest_version": 2,
    "name": "VPN Clipboard Fix",
    "description": "Better Way to Access Clipboard",
    "version": "1.0",
    "icons": {
        "128": "logo.png"
    },
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default-icon": "logo.png"
    },
    "commands": {
        "show": {
            "suggested_key": {
                "default": "Ctrl+Alt+S"
            },
            "description": "Show F8 menu"
        },
        "copy": {
            "suggested_key": {
                "default": "Ctrl+Alt+C"
            },
            "description": "Initiate text copy from RDP"
        },
        "paste": {
            "suggested_key": {
                "default": "Ctrl+Alt+V"
            },
            "description": "Copy content of RDP clipboard to RDP"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    }
}