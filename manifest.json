{
    "manifest_version": 2,
    "name": "VPN Clipboard Fix",
    "description": "Better Way to Access Clipboard",
    "version": "1.0",
    "icons": {
        "128": "logo.png"
    },
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default-icon": "logo.png"
    },
    "background": {
        "scripts": [
            "commands.js"
        ],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": [
            "popup.js"
        ]
    }]
}